<ul class="timeline">
  <li>
    <div class="timeline-badge"><i class="fa fa-rocket" aria-hidden="true"></i></div>
    <div class="timeline-panel">
      <div class="timeline-heading">
        <h4 class="timeline-title"><%= @post.title %></h4>
        <p><small class="text-muted"><%= @post.text %></small></p>
        <p><small class="text-muted"><i class="fa fa-clock-o"></i> <%= @post.created_at.strftime('%d/%m/%Y : %I:%M%p') %></small></p>
      </div>
    </div>
  </li>
</ul>

<a href="/posts/<%= @post.id %>/edit" class="btn btn-default"><i class="fa fa-pencil" aria-hidden="true"></i> Editar</a>
<a href="/posts" class="btn btn-danger"><i class="fa fa-chevron-left" aria-hidden="true"></i> Voltar</a>
