<h2></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="container">
    <div class="card card-container">
      <!-- <img class="profile-img-card" src="//lh3.googleusercontent.com/-6V8xOA6M7BA/AAAAAAAAAAI/AAAAAAAAAAA/rzlHcD0KYwo/photo.jpg?sz=120" alt="" /> -->
      <h3 class="text-center">Criar Conta</h3>
      <p id="profile-name" class="profile-name-card"></p>
      <span id="reauth-email" class="reauth-email"></span>

      <%= f.text_field :name, required: true, class: 'form-control', placeholder: 'Nome' %>
      <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
      <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Senha' %>
      <% if @minimum_password_length %>
        <em>(Minimo de <%= @minimum_password_length %> caracteres)</em>
      <% end %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Confirmar Senha' %>
      <br>
      <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block btn-signin" type="submit"> Criar</button>
      </div>
      <%= render "devise/shared/links" %>
    </div><!-- /card-container -->
  </div><!-- /container -->
<% end %>
